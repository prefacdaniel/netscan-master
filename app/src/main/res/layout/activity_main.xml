<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dprefac.barcodescanner.MainActivity">

    <Button
        android:id="@+id/scanningButton"
        android:layout_width="215dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="76dp"
        android:onClick="scanBarecode"
        android:text="Scaneaza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="215dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:onClick="startSettings"
        android:text="Setari"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listProduct" />

    <Button
        android:id="@+id/listProduct"
        android:layout_width="215dp"
        android:layout_height="90dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:onClick="listAllProducts"
        android:text="Lista produse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanningButton" />
</android.support.constraint.ConstraintLayout>
